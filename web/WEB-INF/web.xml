<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarouselController</servlet-name>
        <servlet-class>com.controller.CarouselController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showProduct</servlet-name>
        <servlet-class>com.controller.showProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showDetail</servlet-name>
        <servlet-class>com.controller.showDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>com.controller.addProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateProduct</servlet-name>
        <servlet-class>com.controller.updateProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>com.controller.deleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>financialReport</servlet-name>
        <servlet-class>com.controller.showReport</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showReport</servlet-name>
        <servlet-class>com.controller.showReport</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homepageProducts</servlet-name>
        <servlet-class>com.controller.homepageProducts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarouselController</servlet-name>
        <url-pattern>/CarouselController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showProduct</servlet-name>
        <url-pattern>/showProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showDetail</servlet-name>
        <url-pattern>/showDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProduct</servlet-name>
        <url-pattern>/updateProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>financialReport</servlet-name>
        <url-pattern>/financialReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showReport</servlet-name>
        <url-pattern>/showReport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homepageProducts</servlet-name>
        <url-pattern>/homepageProducts</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
